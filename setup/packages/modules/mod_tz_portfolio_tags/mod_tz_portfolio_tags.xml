<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="4.1" client="site" method="upgrade">
    <name>mod_tz_portfolio_tags</name>
    <author>TZ Portfolio</author>
    <creationDate>February 14th 2024</creationDate>
    <copyright>Copyright (C) 2015 TemPlaza. All rights reserved.</copyright>
    <license>GNU/GPL v2 or later http://www.gnu.org/licenses/gpl-2.0.html</license>
    <authorEmail>support@templaza.com</authorEmail>
    <authorUrl>www.templaza.com/</authorUrl>
    <version>4.0.0</version>
    <description>MOD_TZ_PORTFOLIO_TAGS_XML_DESCRIPTION</description>
    <namespace path="src">TemPlaza\Component\TZ_Portfolio\Module\Tags</namespace>
    <files>
        <folder module="mod_tz_portfolio_tags">services</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/mod_tz_portfolio_tags.ini</language>
        <language tag="en-GB">en-GB/mod_tz_portfolio_tags.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldprefix="TemPlaza\Component\TZ_Portfolio\Administrator\Field">
                <field name="catid" type="tzcategory" multiple="true" size="10"
                       label="MOD_TZ_PORTFOLIO_TAGS_CHOOSE_CATEGORIES_LABEL">
                    <option value="">JOPTION_ALL_CATEGORIES</option>
                </field>
                <field type="stylelayout" name="template_id"
                       label="COM_TZ_PORTFOLIO_TEMPLATE_LABEL">
                    <option value="0">JOPTION_USE_DEFAULT</option>
                </field>
                <field name="tag_limit" type="text"
                       label="MOD_TZ_PORTFOLIO_TAGS_LIMIT_LABEL"/>
                <field name="enable_link" type="radio"
                       default="1" class="switcher btn-group"
                       layout="joomla.form.field.radio.switcher"
                       label="MOD_TZ_PORTFOLIO_TAGS_LINK_LABEL">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field type="radio" name="enable_min_max_font_size"
                       default="1"
                       class="switcher btn-group"
                       layout="joomla.form.field.radio.switcher"
                       label="MOD_TZ_PORTFOLIO_TAGS_ENABLE_MIN_MAX_FONT_SIZE">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="maxfont" type="text" default="300"
                       showon="enable_min_max_font_size:1"
                       label="MOD_TZ_PORTFOLIO_TAGS_MAXFONT_LABEL"/>
                <field name="minfont" type="text" default="75"
                       showon="enable_min_max_font_size:1"
                       label="MOD_TZ_PORTFOLIO_TAGS_MINFONT_LABEL"/>
                <field type="radio" name="show_article_counter"
                       default="1" class="switcher btn-group"
                       layout="joomla.form.field.radio.switcher"
                       label="MOD_TZ_PORTFOLIO_TAGS_SHOW_ARTICLE_COUNTER">
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field type="radio" name="show_tag_all"
                       default="0" class="switcher btn-group"
                       layout="joomla.form.field.radio.switcher"
                       label="MOD_TZ_PORTFOLIO_TAGS_SHOW_TAG_ALL">
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field type="text" name="tag_all_text"
                       default="All"
                       showon="show_tag_all:1"
                       label="MOD_TZ_PORTFOLIO_TAGS_ALL_TEXT"/>
                <field type="menuitem" name="menu_active"
                       default="auto"
                       label="COM_TZ_PORTFOLIO_CHOOSE_MENU_ACTIVE"
                       description="COM_TZ_PORTFOLIO_CHOOSE_MENU_ACTIVE_DESC">
                    <option value="auto">COM_TZ_PORTFOLIO_AUTO</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field name="layout" type="modulelayout"
                       class="form-select"
                       label="JFIELD_ALT_LAYOUT_LABEL"
                       description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>

                <field name="moduleclass_sfx" type="textarea" rows="3"
                       label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                       description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>

                <field name="cache" type="list" default="1"
                       label="COM_MODULES_FIELD_CACHING_LABEL"
                       description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field name="cache_time" type="text" default="900"
                       label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                       description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
                <field name="cachemode" type="hidden" default="static">
                    <option value="static"></option>
                </field>
                <field type="radio" name="enable_bootstrap"
                       default="0" class="switcher btn-group"
                       layout="joomla.form.field.radio.switcher"
                       label="COM_TZ_PORTFOLIO_ENABLE_BOOTSTRAP_LIBRARY_LABEL">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field type="list" name="bootstrapversion"
                       default="3"
                       showon="enable_bootstrap:1"
                       label="COM_TZ_PORTFOLIO_BOOTSTRAP_VERSION">
                    <option value="3">JGLOBAL_SEF_ADVANCED_LEGACY</option>
                    <option value="4">v4</option>
                </field>
<!--                <field type="radio" name="enable_bootstrap_js"-->
<!--                       default="1" class="switcher btn-group"-->
<!--                       showon="enable_bootstrap:1"-->
<!--                       layout="joomla.form.field.radio.switcher"-->
<!--                       label="COM_TZ_PORTFOLIO_ENABLE_BOOTSTRAP_JS_LABEL">-->
<!--                    <option value="0">JNO</option>-->
<!--                    <option value="1">JYES</option>-->
<!--                </field>-->
            </fieldset>

        </fields>
    </config>
</extension>