    <languages folder="language">
        <language tag="en-GB">en-GB/mod_tz_portfolio_categories.ini</language>
        <language tag="en-GB">en-GB/mod_tz_portfolio_categories.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldprefix="TemPlaza\Component\TZ_Portfolio\Administrator\Field">
                <field type="tzcategory" name="catid"
                       multiple="true"
                       size="10" default=""
                       hint="JOPTION_ALL_CATEGORIES"
                       label="MOD_TZ_PORTFOLIO_CATEGORIES_CHOOSE_CATEGORIES_LABEL"/>
                <field type="stylelayout" name="template_id"
                       label="COM_TZ_PORTFOLIO_TEMPLATE_LABEL">
                    <option value="0">JOPTION_USE_DEFAULT</option>
                </field>
                <field type="radio" name="show_total"
                       class="switcher btn-group" default="1"
                       layout="joomla.form.field.radio.switcher"
                       label="MOD_TZ_PORTFOLIO_CATEGORIES_SHOW_TOTAL">
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field type="radio" name="show_desc"
                       class="switcher btn-group" default="1"
                       layout="joomla.form.field.radio.switcher"
                       label="MOD_TZ_PORTFOLIO_CATEGORIES_SHOW_DESC">
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field type="radio" name="show_image"
                       class="switcher btn-group" default="1"
                       layout="joomla.form.field.radio.switcher"
                       label="MOD_TZ_PORTFOLIO_CATEGORIES_SHOW_IMAGE">
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field type="radio" name="show_title"
                       class="switcher btn-group" default="1"
                       layout="joomla.form.field.radio.switcher"
                       label="MOD_TZ_PORTFOLIO_CATEGORIES_SHOW_TITLE">
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field name="layout" type="modulelayout"
                       class="form-select"
                       label="JFIELD_ALT_LAYOUT_LABEL"
                       description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>

                <field name="moduleclass_sfx" type="textarea" rows="3"
                       label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                       description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>

                <field name="cache" type="list" default="1"
                       label="COM_MODULES_FIELD_CACHING_LABEL"
                       description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field name="cache_time" type="text" default="900"
                       label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                       description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
                <field name="cachemode" type="hidden" default="static">
                    <option value="static"></option>
                </field>
                <field type="radio" name="enable_uikit"
                       layout="joomla.form.field.radio.switcher"
                       default="0" class="switcher"
                       label="COM_TZ_PORTFOLIO_ENABLE_UIKIT_LABEL">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
