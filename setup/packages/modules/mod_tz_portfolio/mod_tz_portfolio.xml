<?xml version="1.0" encoding="utf-8"?>
<extension version="4.1" type="module" client="site" method="upgrade">
    <name>mod_tz_portfolio</name>
    <author>TZ Portfolio</author>
    <creationDate>May 03 2024</creationDate>
    <copyright>Copyright (C) 2015-2024 TemPlaza. All rights reserved.</copyright>
