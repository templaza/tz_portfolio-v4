<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="4.1" client="site" method="upgrade">
    <name>mod_tz_portfolio_articles_archive</name>
    <author>TZ Portfolio</author>
    <creationDate>July 23rd 2024</creationDate>
    <copyright>Copyright (C) 2015 TemPlaza. All rights reserved.</copyright>
    <license>GNU/GPL v2 or later http://www.gnu.org/licenses/gpl-2.0.html</license>
    <authorEmail>support@templaza.com</authorEmail>
    <authorUrl>www.templaza.com/</authorUrl>
    <version>4.0.0</version>
    <description>MOD_TZ_PORTFOLIO_ARTICLES_ARCHIVE_XML_DESCRIPTION</description>
    <namespace path="src">TemPlaza\Component\TZ_Portfolio\Module\ArticlesArchive</namespace>
    <files>
        <folder module="mod_tz_portfolio_articles_archive">services</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/mod_tz_portfolio_articles_archive.ini</language>
        <language tag="en-GB">en-GB/mod_tz_portfolio_articles_archive.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldprefix="TemPlaza\Component\TZ_Portfolio\Administrator\Field">
                <field name="count" type="number"
                       default="10" min="0"
                       label="MOD_TZ_PORTFOLIO_ARTICLES_ARCHIVE_FIELD_COUNT_LABEL"
                       description="MOD_TZ_PORTFOLIO_ARTICLES_ARCHIVE_FIELD_COUNT_DESC" />
                <field name="show_article_count" type="radio"
                       class="switcher btn-group" default="1"
                       layout="joomla.form.field.radio.switcher"
                       label="MOD_TZ_PORTFOLIO_ARTICLES_ARCHIVE_SHOW_ARTICLE_COUNT_LABEL"
                       description="MOD_TZ_PORTFOLIO_ARTICLES_ARCHIVE_SHOW_ARTICLE_COUNT_DESC">
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>

                <field name="tzmenuitem" type="menuitem" default="auto"
                       label="MOD_TZ_PORTFOLIO_ARTICLES_ARCHIVE_CHOOSE_MENU_ITEMID_LABEL">
                    <option value="auto">JGLOBAL_AUTO</option>
                </field>
                <field type="stylelayout" name="template_id"
                       label="COM_TZ_PORTFOLIO_TEMPLATE_LABEL">
                    <option value="0">JOPTION_USE_DEFAULT</option>
                </field>
            </fieldset>

            <fieldset name="advanced">
                <field name="layout" type="modulelayout"
                       class="form-select"
                       label="JFIELD_ALT_LAYOUT_LABEL"
                       description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field name="moduleclass_sfx" type="text"
                       label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                       description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field name="cache" type="list"
                       default="1"
                       label="COM_MODULES_FIELD_CACHING_LABEL"
                       description="COM_MODULES_FIELD_CACHING_DESC"
                >
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field name="cache_time" type="text"
                       default="900"
                       label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                       description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field
                        name="cachemode"
                        type="hidden"
                        default="static">
                    <option value="static"></option>
                </field>
                <field type="radio" name="enable_uikit"
                       layout="joomla.form.field.radio.switcher"
                       default="0" class="switcher"
                       label="COM_TZ_PORTFOLIO_ENABLE_UIKIT_LABEL">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>