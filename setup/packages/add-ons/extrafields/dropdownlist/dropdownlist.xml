<?xml version="1.0" encoding="utf-8"?>
<extension version="4.1" type="tz_portfolio-addon" group="extrafields" method="upgrade">
    <name>plg_extrafields_dropdownlist</name>
    <author>TZ Portfolio</author>
    <creationDate>July 25rd 2024</creationDate>
    <copyright>Copyright (C) 2015 TemPlaza. All rights reserved.</copyright>
    <license>GNU/GPL v2 or later http://www.gnu.org/licenses/gpl-2.0.html</license>
    <authorEmail>support@templaza.com</authorEmail>
    <authorUrl>www.templaza.com/</authorUrl>
    <version>4.0.0</version>
    <description>PLG_EXTRAFIELDS_DROPDOWNLIST_XML_DESCRIPTION</description>

    <tpTargetPlatforms>
        <tpTargetPlatform name="com_tz_portfolio" version="4.*"/>
    </tpTargetPlatforms>

    <files>
        <folder addon="dropdownlist">services</folder>
        <folder>admin</folder>
        <folder>language</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field type="text" name="size" default="5"
                       label="PLG_EXTRAFIELDS_DROPDOWNLIST_SIZE_LABEL"/>
                <field type="list" name="search_type"
                       default="dropdownlist"
                       label="PLG_EXTRAFIELDS_DROPDOWNLIST_SEARCH_TYPE_LABEL">
                    <option value="dropdownlist">PLG_EXTRAFIELDS_DROPDOWNLIST_TITLE</option>
                    <option value="multiselect">PLG_EXTRAFIELDS_DROPDOWNLIST_MULTIPLESELECT</option>
                    <option value="checkbox">PLG_EXTRAFIELDS_DROPDOWNLIST_CHECKBOX</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>